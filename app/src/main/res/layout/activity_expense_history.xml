<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.romel.expensetracker.ExpenseHistoryActivity">

    <TextView
        android:id="@+id/ExpenseHistoryTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Expense History"
        android:textSize="30dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="76dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <ListView
        android:id="@+id/ExpenseListView"
        android:layout_width="348dp"
        android:layout_height="518dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="-13dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ExpenseHistoryTextView" />
</android.support.constraint.ConstraintLayout>
